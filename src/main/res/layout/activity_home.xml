<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/gradient"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Please Enter the Details"
        android:textSize="24dp"

        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="24dp"
        android:layout_below="@+id/txt_title"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Roll No."
        android:textSize="24dp"
        android:layout_below="@+id/name"
        android:inputType="number"/>
    <EditText
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registration No."
        android:textSize="24dp"
        android:layout_below="@+id/roll"
        android:inputType="number"/>
    <EditText
        android:id="@+id/sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Semester"
        android:textSize="24dp"
        android:layout_below="@+id/reg"
        android:inputType="number"/>

    <EditText
        android:id="@+id/program"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sem"
        android:hint="Program"
        android:inputType="textPersonName"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/degree"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sem"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/program"
        android:hint="Degree"
        android:inputType="textPersonName"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/fee"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/program"
        android:hint="Fee"
        android:inputType="number"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/depositNo"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/degree"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/fee"
        android:hint="Deposit No"
        android:inputType="textPersonName"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/subj"
        android:layout_width="391dp"
        android:layout_height="121dp"
        android:layout_below="@+id/fee"
        android:layout_marginTop="13dp"
        android:hint="Type Here....."
        android:inputType="textMultiLine"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btninsert"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subj"
        android:layout_marginTop="15dp"
        android:text="Insert"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subj"
        android:layout_marginStart="71dp"

        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btninsert"
        android:text="Update"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Delete"

        android:layout_below="@+id/btninsert"/>

    <Button
        android:id="@+id/btnView"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpdate"
        android:layout_marginStart="73dp"

        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/btnDel"
        android:text="View"
        android:textSize="24dp" />


</RelativeLayout>